{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".svelte-kit/**", "build/**"]
		},
		"@rief/utils#build": {
			"outputs": []
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"check": {
			"dependsOn": ["^build"]
		},
		"docs": {
			"dependsOn": ["^build"],
			"outputs": ["docs/**"]
		},
		"clean": {
			"cache": false
		}
	}
}

